
@using System.Linq
@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@using Abb.SimpleChat.Controllers
@{
    
    ViewData["Title"] = "MessagingView";
}
<form method="post">
    <label>userID:@Html.ViewBag.user.Id</label> <label>Name:@Html.ViewBag.user.Name</label><br />
    <table>
        @for (int i = 0; i < ViewBag.messageTable.Rows.Count; i++)
        {
            <tr class="odd gradeX">
                <td>@Html.ViewBag.messageTable.Rows[i]["NameUser"]</td>
                <td>@Html.ViewBag.messageTable.Rows[i]["Messages"]</td>
            </tr>
        }
    </table>
    <input type="text" name="Message" />
    <button type="submit" name="action">Отправить</button>

</form>
<h2>MessagingView</h2>

